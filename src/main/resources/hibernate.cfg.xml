<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/cinema?serverTimezone=EET</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.username">newUserDB</property>
        <property name="hibernate.connection.password">1234user</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping class="com.dev.cinema.model.Movie" />
        <mapping class="com.dev.cinema.model.CinemaHall"/>
        <mapping class="com.dev.cinema.model.MovieSession"/>
        <mapping class="com.dev.cinema.model.User"/>
        <mapping class="com.dev.cinema.model.ShoppingCart"/>
        <mapping class="com.dev.cinema.model.Ticket"/>
        <mapping class="com.dev.cinema.model.Orders"/>

    </session-factory>
</hibernate-configuration>
